<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageButton
        android:id="@+id/ibLibro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="36dp"
        android:layout_marginEnd="3dp"
        android:contentDescription="@string/sibLibro"
        android:onClick="BotonLibroClick"
        app:layout_constraintEnd_toStartOf="@+id/ibMano"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@mipmap/icolibro" />

    <ImageButton
        android:id="@+id/ibMano"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="36dp"
        android:contentDescription="@string/sibMano"
        android:onClick="BotonManoClick"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@mipmap/icomano"
        tools:layout_editor_absoluteX="224dp" />

</android.support.constraint.ConstraintLayout>