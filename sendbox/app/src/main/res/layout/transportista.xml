<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cvTransportista"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            android:gravity="center"
            android:orientation="horizontal"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/ivFotoPerUsu"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_marginEnd="7dp"
                android:layout_weight="3"
                android:scaleType="fitCenter"
                app:srcCompat="@color/gris" />

            <LinearLayout
                android:id="@+id/lyDatosUsu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvNombreUsu"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@android:color/black"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    tools:text="NOMBRE" />

                <LinearLayout
                    android:id="@+id/lyDNIUsu"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tvTitDNIUsu"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="5dp"
                        android:text="@string/dniPer"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tvDNIUsu"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:text="0000000" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/lyMatriculaUsu"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tvTitMatriculaUsu"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="5dp"
                        android:text="@string/matriculaPer"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tvMatriculaUsu"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:text="0000000" />
                </LinearLayout>

            </LinearLayout>
        </LinearLayout>
    </android.support.constraint.ConstraintLayout>
</android.support.v7.widget.CardView>